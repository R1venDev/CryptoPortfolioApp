<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<VBox alignment="CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.cryptoapp.CreateUpdateUsersController">

    <Label text="Добавить пользователя" style="-fx-font-size: 16px;"/>

    <Label text="Имя:" style="-fx-font-size: 16px;"/>
    <TextField fx:id="firstNameTextField" promptText="Имя"/>

    <Label text="Фамилия:" style="-fx-font-size: 16px;"/>
    <TextField fx:id="lastNameTextField" promptText="Фамилия"/>

    <Label text="Email:" style="-fx-font-size: 16px;"/>
    <TextField fx:id="emailTextField" promptText="Email"/>

    <Label text="Тип пользователя:" style="-fx-font-size: 16px;"/>
    <ComboBox fx:id="userTypeComboBox" promptText="Тип пользователя"> </ComboBox>
    <Button fx:id="saveButton" text="Добавить пользователя" onAction="#onSaveButtonClick"/>
</VBox>
